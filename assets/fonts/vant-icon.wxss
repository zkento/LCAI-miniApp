/* Vant Icon 本地字体文件 - 解决iOS真机显示问题 */
@font-face {
  font-family: 'vant-icon';
  src: url('./vant-icon.woff2') format('woff2'),
       url('./vant-icon.woff') format('woff');
  font-weight: normal;
  font-style: normal;
  font-display: auto;
}

/* 重写van-icon样式，使用本地字体 */
.van-icon {
  font-family: 'vant-icon' !important;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  font: normal normal normal 14px/1 'vant-icon';
  font-size: inherit;
  position: relative;
  display: inline-block;
}

.van-icon:before {
  display: inline-block;
}

