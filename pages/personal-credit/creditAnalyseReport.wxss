/* 征信分析报告组件样式 */

/* --------- 1. 基础布局样式 --------- */
.credit-analyse-report {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 44px - env(safe-area-inset-top)); /* 减去导航栏高度：44px + 安全区域顶部 */
  width: 100%;
  position: relative;
  overflow: hidden;
  background-color: #f5f7fa;
  padding-bottom: env(safe-area-inset-bottom); /* 添加安全区域底部内边距 */
  margin-top: 0; /* 确保没有额外的上边距 */
  box-sizing: border-box; /* 确保padding不会增加总高度 */
}

.step-content {
  flex: 1;
  overflow: hidden;
  padding: 0;
  position: relative;
  display: flex;
  flex-direction: column;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.step-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-bottom: 20rpx;
  height: 100%;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

/* --------- 2. 步骤指示器样式 --------- */
.steps-header {
  background: #ffffff;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
  flex-shrink: 0; /* 防止被压缩 */
}

/* --------- 3. 步骤2：提取内容布局 --------- */
.extraction-layout {
  display: flex;
  flex: 1;
  gap: 20rpx;
  padding: 20rpx;
  overflow: hidden;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.original-file, .extracted-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.panel-header {
  padding: 24rpx 32rpx;
  background: #f8f9fa;
  border-bottom: 2rpx solid #e9ecef;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0; /* 防止被压缩 */
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.file-name {
  font-size: 24rpx;
  color: #666666;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.extraction-progress {
  font-size: 24rpx;
  color: #1989fa;
  font-weight: 500;
}

.panel-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.file-preview {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.preview-image {
  max-width: 100%;
  max-height: 100%;
  border-radius: 8rpx;
}

.preview-webview {
  width: 100%;
  height: 100%;
}

.file-placeholder {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999999;
}

.placeholder-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.placeholder-text {
  font-size: 28rpx;
}

.extraction-loading {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

.text-content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.extracted-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333333;
  white-space: pre-wrap;
  word-break: break-all;
}

/* --------- 4. 悬浮按钮样式 --------- */
.floating-actions {
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  z-index: 100;
}

.floating-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #1989fa;
  color: #ffffff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.3);
  transition: all 0.3s ease;
}

.floating-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.2);
}

/* --------- 5. 步骤3：AI思考布局 --------- */
.thinking-layout {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.thinking-header {
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0; /* 防止被压缩 */
}

.thinking-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.thinking-timer {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  opacity: 0.9;
}

.thinking-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.thinking-process {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.thinking-text {
  line-height: 1.8;
  font-size: 28rpx;
  color: #333333;
}

.thinking-label {
  font-weight: 600;
  color: #1989fa;
  display: block;
  margin-bottom: 16rpx;
}

.thinking-content-text {
  white-space: pre-wrap;
  word-break: break-word;
}

.thinking-cursor {
  color: #1989fa;
  font-weight: bold;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

.scroll-anchor {
  height: 1rpx;
}

/* --------- 6. 步骤4：报告布局 --------- */
.report-layout {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.report-header {
  padding: 32rpx;
  background: #f8f9fa;
  border-bottom: 2rpx solid #e9ecef;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0; /* 防止被压缩 */
}

.report-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.report-actions {
  display: flex;
  gap: 16rpx;
}

.report-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.report-text {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
  line-height: 1.8;
  font-size: 28rpx;
  color: #333333;
}

/* 优化 Markdown 内容显示样式 - 参考主流移动端排版 */
.report-content rich-text {
  display: block;
  width: 100%;
}

/* 标题样式优化 - 参考微信文章、知乎等主流排版 */
.report-content h1 {
  font-size: 40rpx !important; /* 一级标题 */
  font-weight: 600 !important;
  color: #1a1a1a !important;
  line-height: 1.4 !important;
  margin: 48rpx 0 32rpx 0 !important;
  padding-bottom: 16rpx !important;
  border-bottom: 2rpx solid #e8e8e8 !important;
}

.report-content h2 {
  font-size: 36rpx !important; /* 二级标题 */
  font-weight: 600 !important;
  color: #2c2c2c !important;
  line-height: 1.4 !important;
  margin: 40rpx 0 24rpx 0 !important;
}

.report-content h3 {
  font-size: 32rpx !important; /* 三级标题 */
  font-weight: 500 !important;
  color: #404040 !important;
  line-height: 1.4 !important;
  margin: 32rpx 0 20rpx 0 !important;
}

.report-content p {
  font-size: 30rpx !important;
  line-height: 1.8 !important;
  color: #333333 !important;
  margin: 0 0 24rpx 0 !important;
  text-align: justify !important; /* 两端对齐 */
}

.report-content strong {
  font-weight: 600 !important;
  color: #1a1a1a !important;
}

/* 列表样式优化 */
.report-content ul, .report-content ol {
  margin: 16rpx 0 24rpx 0 !important;
  padding-left: 32rpx !important;
}

.report-content li {
  font-size: 30rpx !important;
  line-height: 1.7 !important;
  color: #333333 !important;
  margin-bottom: 12rpx !important;
}

/* --------- 7. 动画效果 --------- */
@keyframes pulse {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
  100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
}
