/* 征信分析报告组件样式 */

/* --------- 1. 基础布局样式 --------- */
.credit-analyse-report {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  position: relative;
  overflow: hidden;
  background-color: #f5f7fa;
}

.step-content {
  flex: 1;
  overflow: hidden;
  padding: 0;
  position: relative;
}

.step-container {
  height: 100%;
  overflow: auto;
}

/* --------- 2. 步骤导航样式 --------- */
.steps-header {
  border-bottom: 1rpx solid #ebeef5;
  background-color: white;
  padding: 20rpx 0;
}

.steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.step-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #c0c4cc;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.step.active .step-icon {
  background-color: #1b68de;
}

.step.completed .step-icon {
  background-color: #1b68de;
}

.step-title {
  font-size: 24rpx;
  color: #909399;
}

.step.active .step-title {
  color: #303133;
  font-weight: 500;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background-color: #c0c4cc;
  margin: 0 10rpx;
  position: relative;
  top: -20rpx;
}

.step-line.active {
  background-color: #1b68de;
}

/* --------- 3. 面板通用样式 --------- */
.panel-header {
  padding: 0 32rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #ebeef5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f5f7fa;
  z-index: 1;
}

.header-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
}

.header-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 12rpx;
}

.file-name {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #909399;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.thinking-status {
  font-size: 28rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 16rpx;
  display: inline-flex;
  align-items: center;
}

.thinking-status::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #1b5dd3;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: pulse 1s infinite;
}

.thinking-completed {
  font-size: 28rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 16rpx;
  display: inline-flex;
  align-items: center;
}

.thinking-completed::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #909399;
  border-radius: 50%;
  margin-right: 12rpx;
}

.report-duration, 
.response-status {
  font-size: 28rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 16rpx;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 28rpx;
  height: 60rpx;
  font-size: 24rpx;
}

.button-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.panel-content {
  flex: 1;
  box-sizing: border-box;
  background-color: #fff;
  height: calc(100% - 100rpx);
  width: 100%;
  overflow-y: auto;
  overflow-x: hidden;
}

/* --------- 4. 文件提取和预览样式 --------- */
.extraction-layout {
  display: flex;
  height: 100%;
  overflow: hidden;
}

.original-file,
.extracted-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  border-right: 1rpx solid #ebeef5;
  overflow: hidden;
}

.file-preview {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.file-preview image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.file-preview image.preview-image-content {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.file-placeholder,
.text-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #909399;
}

.placeholder-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 32rpx;
}

.text-content {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 32rpx;
  white-space: pre-wrap;
  line-height: 1.6;
  word-break: break-all;
  word-wrap: break-word;
  box-sizing: border-box;
  color: #606266;
  font-size: 28rpx;
}

/* 进度条样式 */
.progress-container {
  /* width: 240rpx; */
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #909399;
}

/* --------- 5. AI思考和处理相关样式 --------- */
/* AI处理中的蒙层 */
.working-overlay {
  /* position: absolute;
  top: 10rpx;
  right: 20rpx; */
  position: fixed;
  left: 50%;
  bottom: 80rpx;
  transform: translateX(-50%);
  width: 480rpx;
  border-radius: 16rpx;
  z-index: 100;
  padding: 20rpx 32rpx;
  background-color: rgba(0, 0, 0, 0.65);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ai-tip {
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #ffffff;
  border-top: 4rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  display: inline-block;
}

/* 思考容器样式 */
.thinking-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color: #ffffff;
}

.thinking-display {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  font-size: 28rpx;
  line-height: 1.6;
  height: 100%;
  width: 100%;
  max-width: 100%;
  color: #606266;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
  font-family: monospace;
  padding: 32rpx;
  text-align: left;
  box-sizing: border-box;
  transition: opacity 0.3s ease;
}

.thinking-display.dimmed {
  opacity: 0.5;
}

.Ai-thinking-container {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  position: relative;
  overflow: auto;
}

/* 生成报告过程中的悬浮提示 */
.generating-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  pointer-events: none;
}

.generating-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 40rpx 60rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.3s ease;
}

.generating-content .loading-spinner {
  width: 72rpx;
  height: 72rpx;
  border: 6rpx solid #c3c3c3;
  border-top: 6rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.generating-message {
  font-size: 28rpx;
  font-weight: 400;
  color: #ffffff;
  white-space: nowrap;
}

/* --------- 6. 报告样式 --------- */
.report-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.report-content {
  padding: 32rpx;
  line-height: 1.6;
  font-size: 28rpx;
  height: 100%;
}

/* --------- 7. 动画效果 --------- */
@keyframes pulse {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
  100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes fadeIn {
  from { 
    opacity: 0; 
    transform: translateY(-20rpx); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

/* 响应式适配 */
@media (max-width: 768px) {
  .extraction-layout {
    flex-direction: column;
  }
 
  .original-file,
  .extracted-text {
    width: 100%;
    border-right: none;
    border-bottom: 1rpx solid #ebeef5;
  }
}

.pdf-preview-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.pdf-preview-placeholder .pdf-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.pdf-preview-placeholder .pdf-name {
  font-size: 32rpx;
  color: #606266;
  text-align: center;
  margin-bottom: 40rpx;
  word-break: break-all;
}

.pdf-preview-placeholder .view-pdf-button {
  background-color: #1b68de;
  color: white;
  font-size: 32rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
} 