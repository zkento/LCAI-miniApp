/* 任务结果查看器页面样式 */
.task-result-page {
  min-height: 100vh;
  background-color: #f7f8fa;
}

/* 页面内容 */
.page-content {
  padding-top: calc(var(--status-bar-height) + 88rpx); /* 导航栏高度 */
  padding-bottom: env(safe-area-inset-bottom);
}

/* 导航栏右侧 */
.nav-right {
  display: flex;
  align-items: center;
  padding: 0 16rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

/* 错误状态 */
.error-container {
  padding: 120rpx 32rpx;
}

/* 任务内容 */
.task-content {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - var(--status-bar-height) - 88rpx);
}

/* 任务信息区域 */
.task-info-section {
  background-color: #ffffff;
  margin-bottom: 16rpx;
}

/* 标签页容器 */
.tabs-container {
  flex: 1;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

/* 标签页内容 */
.tab-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 60vh;
}

/* 报告标签页 */
.report-tab {
  padding: 0;
}

.report-content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* AI思考标签页 */
.thinking-tab {
  padding: 0;
}

.thinking-content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* Markdown内容样式 */
.markdown-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #323233;
  white-space: pre-wrap;
  word-wrap: break-word;
}

/* Markdown内容增强样式 */
.report-content .markdown-content,
.thinking-content .markdown-content {
  /* 标题样式 */
  --h1-size: 36rpx;
  --h2-size: 32rpx;
  --h3-size: 30rpx;
  --h4-size: 28rpx;

  /* 间距 */
  --paragraph-margin: 24rpx;
  --list-margin: 16rpx;
}

/* 模拟Markdown标题效果 */
.markdown-content {
  /* 使用正则表达式无法实现，改用文本处理 */
}

/* 报告内容特殊样式 */
.report-content {
  /* 添加一些视觉分隔 */
}

.report-content .markdown-content {
  /* 为报告内容添加更好的可读性 */
  text-align: justify;
  text-justify: inter-ideograph;
}

.thinking-content .markdown-content {
  /* AI思考过程的样式 */
  background-color: #f8f9fa;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #1b68de;
}

/* 咨询标签页 */
.consultation-tab {
  padding: 0;
  height: 60vh;
  position: relative;
}

/* 可滚动的消息列表 */
.consultation-messages {
  flex: 1;
  height: calc(60vh - 120rpx);
  padding: 24rpx;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 32rpx;
  animation: messageSlideIn 0.3s ease-out;
}

.message-item:last-child {
  margin-bottom: 0;
}

/* 用户消息 */
.user-message {
  flex-direction: row-reverse;
}

.user-message .message-avatar {
  background-color: #1b68de;
  margin-left: 16rpx;
  margin-right: 0;
}

.user-message .message-content {
  align-items: flex-end;
}

.user-message .message-text {
  background-color: #1b68de;
  color: #ffffff;
}

/* AI消息 */
.ai-message {
  flex-direction: row;
}

.ai-message .message-avatar {
  background-color: #f0f0f0;
  margin-right: 16rpx;
  margin-left: 0;
}

.ai-message .message-content {
  align-items: flex-start;
}

.ai-message .message-text {
  background-color: #f0f0f0;
  color: #323233;
}

/* 消息头像 */
.message-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #323233;
}

.user-message .avatar-text {
  color: #ffffff;
}

/* 消息内容 */
.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  max-width: calc(100% - 80rpx);
}

.message-text {
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
  white-space: pre-wrap;
  margin-bottom: 8rpx;
}

.message-time {
  font-size: 22rpx;
  color: #969799;
  padding: 0 8rpx;
}

/* 输入中指示器 */
.typing-indicator {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 16rpx;
}

.typing-text {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #969799;
}

/* 空状态 */
.empty-consultation {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40vh;
}

/* 输入区域 */
.consultation-input-area {
  position: sticky;
  bottom: 0;
  background-color: #ffffff;
  border-top: 1rpx solid #ebedf0;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.input-container {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}

.input-container .van-field {
  flex: 1;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  min-height: 72rpx;
  max-height: 200rpx;
}

.send-button {
  flex-shrink: 0;
  height: 72rpx;
  min-width: 120rpx;
}

/* 动画效果 */
@keyframes messageSlideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 页面进入动画 - 移除自动动画，避免全屏缩放问题 */
.task-content {
  /* animation: fadeInUp 0.4s ease-out; */
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 标签页切换动画 - 移除自动动画，避免全屏缩放问题 */
.tab-content {
  /* animation: tabSlideIn 0.3s ease-out; */
}

@keyframes tabSlideIn {
  from {
    opacity: 0;
    transform: translateX(20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 按钮点击效果 */
.nav-right:active {
  opacity: 0.7;
  transition: opacity 0.1s ease;
}

.send-button:active {
  opacity: 0.8;
  transition: opacity 0.1s ease;
}

/* 加载动画优化 */
.loading-container {
  animation: pulseIn 0.5s ease-out;
}

@keyframes pulseIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 消息输入框聚焦效果 */
.input-container .van-field:focus-within {
  box-shadow: 0 0 0 4rpx rgba(27, 104, 222, 0.1);
  transition: box-shadow 0.2s ease;
}

/* 任务信息卡片悬停效果 - 移除可能导致全屏缩放的效果 */
.task-info-section {
  /* transition: all 0.3s ease; */
}

