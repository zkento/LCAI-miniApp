/* 响应式适配 */
@media (max-width: 375px) {
  .page-content {
    padding-top: calc(var(--status-bar-height) + 80rpx);
  }
  
  .report-content,
  .thinking-content {
    padding: 24rpx;
  }
  
  .markdown-content {
    font-size: 26rpx;
  }
  
  .message-text {
    font-size: 26rpx;
    padding: 14rpx 18rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .task-result-page {
    background-color: #1a1a1a;
  }
  
  .task-info-section,
  .tabs-container {
    background-color: #2a2a2a;
  }
  
  .markdown-content {
    color: #e5e5e5;
  }
  
  .ai-message .message-text {
    background-color: #3a3a3a;
    color: #e5e5e5;
  }
  
  .ai-message .message-avatar {
    background-color: #3a3a3a;
  }
  
  .consultation-input-area {
    background-color: #2a2a2a;
    border-top-color: #404040;
  }
  
  .input-container .van-field {
    background-color: #3a3a3a;
  }
  
  .typing-indicator {
    background-color: #3a3a3a;
  }
  
  .typing-text {
    color: #999999;
  }
}

/* 触摸优化 */
.nav-right,
.send-button {
  -webkit-tap-highlight-color: transparent;
}

/* 滚动优化 */
.consultation-messages,
.report-content,
.thinking-content {
  scroll-behavior: smooth;
}

/* 安全区域适配 */
.task-result-page {
  padding-bottom: env(safe-area-inset-bottom);
}
