/* pages/task-result/task-result.wxss */

/* 自定义van-tabs主题色 */
page {
  --tabs-line-color: #1b68de;
  --tabs-active-text-color: #1b68de;
  --tabs-default-color: #646566;
  --button-primary-background-color: #1b68de;
  --button-primary-border-color: #1b68de;
  height: 100%;
  overflow: hidden;
}

/* 强制覆盖van-tabs样式 */
.van-tabs__line {
  background-color: #1b68de !important;
}

.van-tab--active {
  color: #1b68de !important;
}

.van-tab {
  color: #646566 !important;
}

.van-tab--active .van-tab__text {
  color: #1b68de !important;
}

.van-tab__text {
  color: #646566 !important;
}

/* 确保激活状态的标签页文字颜色 */
.van-tabs__content .van-tab--active {
  color: #1b68de !important;
}

/* 主容器样式 */
.task-result-container {
  height: 100vh;
  background-color: #f5f7fa;
  display: flex;
  flex-direction: column;
}

/* 内容容器 */
.content-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

/* 错误状态 */
.error-container {
  padding: 100rpx 40rpx;
}

.error-retry-btn {
  margin-top: 40rpx;
}

/* 任务信息区域 */
.task-info-section {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.info-header {
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #262626;
}

.info-content {
  padding: 24rpx 32rpx 32rpx;
}

.info-row {
  display: flex;
  margin-bottom: 30rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

/* 使用更具体的选择器确保样式生效 */
.task-result-container .info-content .info-label {
  font-size: 32rpx !important;
  color: #8c8c8c !important;
  min-width: 160rpx;
}

.task-result-container .info-content .info-value {
  font-size: 32rpx !important;
  color: #262626 !important;
  flex: 1;
  word-break: break-all;
}

/* 文件显示相关样式 */
.no-file {
  color: #ccc;
  font-style: italic;
}

.file-list-inline {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.file-item-inline {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.file-name-text {
  color: #262626;
  flex: 1;
  word-break: break-all;
}

.file-view-link {
  color: #1b68de;
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.file-view-link:active {
  opacity: 0.7;
}

/* Tab容器 */
.tab-container {
  flex: 1;
  margin: 0 20rpx 40rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 自定义Tab样式 */
.custom-tabs {
  width: 100%;
}

/* Tab内容包装器 */
.tab-content-wrapper {
  padding: 32rpx;
  min-height: 100%;
  box-sizing: border-box;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom)); /* 为统一胶囊按钮留出空间 */
}

/* 报告头部 */
.report-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
}

.report-title {
  flex: 1;
}

.title-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 8rpx;
}

.generation-time {
  font-size: 24rpx;
  color: #8c8c8c;
}

.report-body {
  line-height: 2.0;
  padding-bottom: 40rpx;
  width: 100%;
}

/* Markdown内容 */
.markdown-content {
  font-size: 30rpx;
  color: #303133;
  line-height: 1.8;
  word-break: break-word;
  min-height: 200rpx;
  width: 100%;
}

.report-text {
  white-space: pre-wrap;
  font-size: 30rpx;
  line-height: 1.8;
  color: #303133;
  width: 100%;
  display: block;
}

/* 空内容提示 */
.empty-content {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  color: #999;
  font-size: 28rpx;
}

/* 思考过程内容 */
.thinking-header {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.thinking-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
}

.thinking-body {
  line-height: 2.0;
  padding-bottom: 40rpx;
  width: 100%;
}

.thinking-process {
  margin-bottom: 40rpx;
  width: 100%;
}

.thinking-text {
  font-size: 30rpx;
  color: #606266;
  line-height: 1.8;
  white-space: pre-wrap;
  width: 100%;
  display: block;
}

/* 咨询过程中的思考记录 */
.consultation-thinking {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 32rpx;
}

.consultation-thinking-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 24rpx;
}

.consultation-thinking-item {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #fafafa;
  border-radius: 12rpx;
}

.consultation-thinking-item:last-child {
  margin-bottom: 0;
}

.thinking-index {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: 600;
  margin-bottom: 16rpx;
}

/* 咨询内容 */
.consultation-wrapper {
  padding-bottom: 160rpx; /* 为输入区域留出空间 */
}

.messages-container {
  padding: 0;
}

.message-item {
  margin-bottom: 32rpx;
}

.message-item:last-child {
  margin-bottom: 0;
}

.user-message {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.user-message .message-content {
  background: #1890ff;
  color: #ffffff;
  max-width: 80%;
  padding: 20rpx 24rpx;
  border-radius: 20rpx 20rpx 8rpx 20rpx;
  word-break: break-word;
}

.assistant-message {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.assistant-message .message-content {
  background: #f0f0f0;
  color: #262626;
  max-width: 80%;
  padding: 20rpx 24rpx;
  border-radius: 20rpx 20rpx 20rpx 8rpx;
  word-break: break-word;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
}

.message-time {
  font-size: 22rpx;
  color: #8c8c8c;
  margin-top: 8rpx;
}

.loading-message {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
  color: #8c8c8c;
}

/* 输入区域 */
.input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: flex-end;
  padding: 16rpx 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  background: #ffffff;
  z-index: 100;
}

.consultation-input {
  flex: 1;
  margin-right: 16rpx;
}

.send-btn {
  flex-shrink: 0;
  height: 72rpx;
}

/* 现代化统一胶囊悬浮按钮样式 */
.unified-floating-button {
  position: fixed;
  bottom: calc(48rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  background: #1b68de;
  border-radius: 56rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15), 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  z-index: 99;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20rpx);
  color: white;
}

/* 现代化按钮区域基础样式 */
.button-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 44rpx;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  flex: 1;
  min-width: 180rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.button-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.button-section:active::before {
  opacity: 1;
}

.button-section:active {
  transform: scale(0.96);
}

/* 现代化按钮图标样式 */
.button-section .button-icon {
  width: 40rpx;
  height: 40rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.button-section:active .button-icon {
  transform: scale(0.9);
}

/* 现代化左侧区域样式 - 下载报告 */
.left-section {
  background: #1b68de;
  border-radius: 52rpx 0 0 52rpx;
  position: relative;
  overflow: hidden;
}

.left-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.left-section:active::before {
  left: 100%;
}

.left-section:active {
  background: #1b68de;
  transform: scale(0.96);
}

/* 现代化右侧区域样式 - 分享 */
.right-section {
  background: #1b68de;
  border-radius: 0 52rpx 52rpx 0;
  position: relative;
  overflow: hidden;
}

.right-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.right-section:active::before {
  left: 100%;
}

.right-section:active {
  background: #1b68de;
  transform: scale(0.96);
}

/* 现代化分割线样式 */
.button-divider {
  width: 1rpx;
  height: 64rpx;
  background: linear-gradient(to bottom,
    transparent 0%,
    rgba(255, 255, 255, 0.5) 20%,
    rgba(255, 255, 255, 0.9) 50%,
    rgba(255, 255, 255, 0.5) 80%,
    transparent 100%
  );
  flex-shrink: 0;
  margin: 0 1rpx;
}

/* 单按钮样式（无分割） */
.full-section {
  background: #1b68de;
  border-radius: 52rpx;
  position: relative;
  overflow: hidden;
}

.full-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.full-section:active::before {
  left: 100%;
}

.full-section:active {
  background: #1b68de;
  transform: scale(0.96);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .task-result-container .info-content .info-label {
    min-width: 140rpx !important;
    font-size: 30rpx !important;
  }

  .task-result-container .info-content .info-value {
    font-size: 30rpx !important;
  }

  .title-text {
    font-size: 30rpx;
  }

  .markdown-content,
  .thinking-text,
  .message-text {
    font-size: 26rpx;
  }
}
