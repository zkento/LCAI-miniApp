/* 页面容器样式 */
.scroll-container {
  width: 100%;
  background-color: #f5f7fa;
  box-sizing: border-box;
}

/* 基础布局 */
.finance-advisor-report {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f7fa;
  box-sizing: border-box;
}

/* 步骤指示器样式 */
.steps-header {
  padding: 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.steps {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
  min-width: 120rpx;
}

.step-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #e4e7ed;
  color: #909399;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.step.active .step-icon {
  background-color: #1b68de;
  color: #fff;
}

.step.completed .step-icon {
  background-color: #67c23a;
  color: #fff;
}

.step-title {
  font-size: 24rpx;
  color: #909399;
  text-align: center;
  white-space: nowrap;
}

.step.active .step-title {
  color: #1b68de;
}

.step.completed .step-title {
  color: #67c23a;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background-color: #e4e7ed;
  margin: 0 20rpx;
  margin-top: -46rpx;
}

.step-line.active {
  background-color: #1b68de;
}

/* 步骤内容区域 */
.step-content {
  flex: 1;
}

.step-container {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  min-height: 600rpx;
}

/* 占位内容样式 */
.placeholder-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 80rpx;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 40rpx;
  animation: rotate 2s linear infinite;
}

.loading-text {
  font-size: 32rpx;
  color: #606266;
  text-align: center;
  line-height: 1.6;
}

/* AI工作状态样式 */
.ai-thinking-container {
  position: relative;
  min-height: 600rpx;
}

.working-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.overlay-content {
  text-align: center;
}

.animation-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.loading-brain {
  font-size: 120rpx;
  animation: pulse 2s ease-in-out infinite;
}

.loading-dots {
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #1b68de;
  animation: bounce 1.4s ease-in-out infinite both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }
.dot:nth-child(3) { animation-delay: 0s; }

.wait-footer {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.ai-tip {
  font-size: 28rpx;
  color: #606266;
}

.ai-timer {
  font-size: 24rpx;
  color: #909399;
}

/* 思考过程容器样式 */
.thinking-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.panel-header {
  padding: 30rpx 40rpx;
  border-bottom: 2rpx solid #eee;
  background-color: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
}

.thinking-status {
  color: #1b68de;
  animation: blink 1.5s linear infinite;
}

.thinking-completed {
  color: #67c23a;
}

.panel-content {
  flex: 1;
  padding: 40rpx;
  position: relative;
}

.generating-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 5;
}

.generating-content {
  text-align: center;
}

.loading-spinner {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

.generating-message {
  font-size: 28rpx;
  color: #606266;
}

.thinking-display {
  transition: opacity 0.3s ease;
}

.thinking-display.dimmed {
  opacity: 0.3;
}

.thinking-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #303133;
  white-space: pre-wrap;
}

/* 报告容器样式 */
.report-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.report-layout {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.report-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #eee;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-button {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
  min-width: auto;
  height: auto;
}

.download-btn {
  background-color: #1b68de;
  color: #fff;
}

.restart-btn {
  background-color: #e6a23c;
  color: #fff;
}

.report-content {
  flex: 1;
  overflow-y: auto;
}

.report-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #303133;
  white-space: pre-wrap;
}

.report-duration {
  font-size: 24rpx;
  color: #909399;
  margin-left: 16rpx;
}

/* 右侧区域样式 */
.report-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 600rpx;
}

.report-right-top {
  flex: 1;
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #eee;
}

.thinking-content {
  flex: 1;
  overflow-y: auto;
}

.work-thinking {
  font-size: 26rpx;
  line-height: 1.8;
  color: #606266;
  white-space: pre-wrap;
}

.report-right-bottom {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 400rpx;
}

.response-status {
  font-size: 24rpx;
  color: #67c23a;
  margin-left: 16rpx;
}

/* 聊天区域样式 */
.chat-messages {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
  max-height: 400rpx;
}

.message {
  display: flex;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.message.user {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #1b68de;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin: 0 16rpx;
  flex-shrink: 0;
}

.message.user .message-avatar {
  background-color: #67c23a;
}

.message-content {
  flex: 1;
  max-width: 70%;
}

.message-text {
  background-color: #f0f2f5;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: #303133;
  display: inline-block;
  word-break: break-word;
}

.message.user .message-text {
  background-color: #1b68de;
  color: #fff;
}

.thinking-indicator {
  display: flex;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  background-color: #f0f2f5;
  border-radius: 16rpx;
}

.thinking-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #909399;
  animation: bounce 1.4s ease-in-out infinite both;
}

.thinking-dot:nth-child(1) { animation-delay: -0.32s; }
.thinking-dot:nth-child(2) { animation-delay: -0.16s; }
.thinking-dot:nth-child(3) { animation-delay: 0s; }

/* 聊天输入框样式 */
.chat-input {
  border-top: 2rpx solid #eee;
  padding: 20rpx;
  background-color: #fff;
}

.input-container {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}

.message-input {
  flex: 1;
  min-height: 80rpx;
  max-height: 200rpx;
  padding: 16rpx 20rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
  background-color: #fff;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #1b68de;
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.send-button.disabled {
  background-color: #c0c4cc;
}

/* 动画定义 */
@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.1); opacity: 0.8; }
}

@keyframes bounce {
  0%, 80%, 100% { 
    transform: scale(0);
  } 40% { 
    transform: scale(1.0);
  }
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.5; }
}

/* 响应式布局 */
@media (max-width: 750px) {
  .step {
    min-width: 100rpx;
  }
  
  .step-icon {
    width: 50rpx;
    height: 50rpx;
    font-size: 20rpx;
  }
  
  .step-title {
    font-size: 20rpx;
  }
  
  .step-line {
    margin-top: -36rpx;
  }
  
  .report-layout {
    flex-direction: column;
  }
  
  .report-right {
    min-height: 500rpx;
  }
  
  .report-right-top,
  .report-right-bottom {
    min-height: 250rpx;
  }
  
  .header-actions {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .action-button {
    width: 100%;
  }
} 