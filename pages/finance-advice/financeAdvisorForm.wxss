}

.tool-content {
  flex: 1;
}

.tool-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
}

.tool-description {
  font-size: 24rpx;
  color: #909399;
}

.tool-action {
  color: #909399;
  font-size: 32rpx;
  opacity: 0.6;
}

