/* 重新分析按钮样式 */
.reanalyze-button {
  height: 56rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: 2rpx solid #1b68de;
  color: #1b68de;
  background-color: transparent;
  min-width: auto;
  width: auto;
  flex-shrink: 0;
  white-space: nowrap;
}

.reanalyze-button:active {
  background-color: #ecf5ff;
}

.reanalyze-button.loading {
  opacity: 0.8;
}

/* ----------------- 工具区域样式 ----------------- */
.tools-section {
  margin-top: auto;
  padding-top: 32rpx;
}

.tool-card {
  display: flex;
  align-items: center;
  background-color: #f8f9fb;
  border-radius: 16rpx;
  padding: 12rpx 16rpx;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.tool-card:active {
  background-color: #f0f6ff;
  border-color: #1b68de99;
  transform: translateY(-4rpx);
}

.tool-icon {
  display: flex;
