/* 页面容器样式 */
.scroll-container {
  width: 100%;
  background-color: #f5f7fa;
  box-sizing: border-box;
}

/* ----------------- 基础布局 ----------------- */
.finance-advisor-form {
  width: 100%;
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f5f7fa;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
}

.form-container {
  width: 100%;
  max-width: 1000rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}

/* ----------------- 左侧输入面板 ----------------- */
.input-panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.description-hint {
  color: #606266;
  font-size: 28rpx;
  margin-bottom: 24rpx;
  line-height: 1.6;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 24rpx;
}

.requirements-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
  background-color: #fff;
}

.requirements-textarea[disabled] {
  background-color: #f5f7fa;
  color: #c0c4cc;
}

.name-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.name-input[disabled] {
  background-color: #f5f7fa;
  color: #c0c4cc;
}

/* 选择器样式 */
.picker-display {
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.selected-text {
  color: #303133;
  font-size: 28rpx;
}

.placeholder-text {
  color: #c0c4cc;
  font-size: 28rpx;
}

/* 客户信息输入区域 */
.client-info-section {
  margin: 20rpx 0 30rpx 0;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 按钮区域 */
.form-actions {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 12rpx;
  margin-bottom: 32rpx;
  flex-wrap: wrap;
}

.reset-button, .extract-button, .submit-button {
  flex: 1;
  min-width: 200rpx;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reset-button {
  background-color: #fff;
  color: #606266;
  border: 2rpx solid #dcdfe6;
}

.extract-button, .submit-button {
  background-color: #1b68de;
  color: #fff;
  border: none;
}

.extract-button[disabled], .submit-button[disabled] {
  background-color: #c0c4cc;
}

.extract-button.loading, .submit-button.loading {
  opacity: 0.8;
}

/* ----------------- 面板通用样式 ----------------- */
.panel-header {
  padding: 0;
  border-bottom: 2rpx solid #eee;
  background-color: #f8f9fa;
  height: 100rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.panel-title {
  color: #000000;
  font-size: 36rpx;
  font-weight: 500;
  margin: 0;
  display: flex;
  align-items: center;
}

.panel-content {
  padding: 0 40rpx 30rpx 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* ----------------- 右侧内容面板 ----------------- */
.content-panel {
  width: 100%;
  min-width: 0;
  display: flex;
  flex-direction: column;
  position: relative;
}

.reference-content,
.analysis-content {
  display: flex;
  flex-direction: column;
  position: relative;
  opacity: 1;
  transition: opacity 0.35s ease;
}

.reference-content.is-background {
  opacity: 0.5;
  pointer-events: none;
  transition: opacity 0.35s ease;
}

/* 分析时间显示 */
.analysis-time {
  font-size: 28rpx;
  color: #909399;
  margin-left: 24rpx;
  font-weight: normal;
}

/* ----------------- 需求参考部分 ----------------- */
.reference-section .section-title,
.example-block .section-title {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 16rpx;
  display: block;
}

.reference-items {
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reference-item {
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
}

.reference-item::before {
  content: "•";
  color: #606266;
  font-size: 36rpx;
  margin-right: 12rpx;
  line-height: 1;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.item-label {
  color: #606266;
  font-size: 28rpx;
  line-height: 1.5;
  flex: 1;
}

/* 示例部分 */
.example-section {
  padding-top: 32rpx;
}

.example-block {
  margin-top: 32rpx;
}

.example-quote {
  margin: 0;
  padding: 24rpx 32rpx;
  background-color: #f8f9fb;
  border-radius: 8rpx;
  color: #909399;
  font-size: 26rpx;
  line-height: 1.6;
  white-space: pre-line;
  transition: background-color 0.2s;
}

.example-quote:active {
  background-color: #ecf5ff80;
}

/* 分析建议部分 */
.analysis-suggestion-section {
  padding-top: 32rpx;
}

.result-title {
  font-size: 32rpx;
  color: #303133;
  margin-bottom: 16rpx;
  font-weight: 500;
  display: block;
}

/* ----------------- 分析结果样式 ----------------- */
.keywords-display .section-title {
  font-size: 32rpx;
  color: #303133;
  margin-bottom: 24rpx;
  display: block;
}

.keywords-content {
  padding: 16rpx 24rpx;
  background-color: #f8f9fb;
  border-radius: 8rpx;
  min-height: 160rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: flex-start;
  align-content: flex-start;
}

.keyword-tag {
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #fff;
  white-space: nowrap;
}

.keyword-tag-primary {
  background-color: #409eff;
}

.keyword-tag-success {
  background-color: #67c23a;
}

.keyword-tag-info {
  background-color: #909399;
}

.keyword-tag-warning {
  background-color: #e6a23c;
}

.keywords-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 160rpx;
  color: #909399;
  font-size: 28rpx;
  background-color: #f8f9fb;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
}

.loading-text {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-requirement-suggestion {
  margin: 0;
  padding: 24rpx 32rpx;
  background-color: #fbf8d2;
  border-radius: 8rpx;
  color: #6b6204;
  font-size: 26rpx;
  line-height: 1.6;
  white-space: pre-line;
}

.user-requirement-suggestion text {
  display: block;
  margin-bottom: 16rpx;
}

.user-requirement-suggestion text:last-child {
  margin-bottom: 0;
}

/* 重新分析按钮样式 */
.reanalyze-button {
  height: 60rpx;
  padding: 0 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 2rpx solid #1b68de;
  color: #1b68de;
  background-color: transparent;
}

.reanalyze-button:active {
  background-color: #ecf5ff;
}

.reanalyze-button.loading {
  opacity: 0.8;
}

/* ----------------- 工具区域样式 ----------------- */
.tools-section {
  margin-top: auto;
  padding-top: 32rpx;
}

.tool-card {
  display: flex;
  align-items: center;
  background-color: #f8f9fb;
  border-radius: 16rpx;
  padding: 12rpx 16rpx;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.tool-card:active {
  background-color: #f0f6ff;
  border-color: #1b68de99;
  transform: translateY(-4rpx);
}

.tool-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background-color: #e6f1ff;
  margin-right: 24rpx;
  font-size: 40rpx;
}

.tool-content {
  flex: 1;
}

.tool-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
}

.tool-description {
  font-size: 24rpx;
  color: #909399;
}

.tool-action {
  color: #909399;
  font-size: 32rpx;
  opacity: 0.6;
}

/* 征信报告分析结果样式 */
.credit-report-trigger {
  position: relative;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  padding: 2rpx 22rpx;
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #ffffff;
  transition: all 0.2s ease-in-out;
  display: flex;
  align-items: center;
}

.credit-report-trigger.is-disabled {
  background-color: #f5f7fa;
  border-color: #e4e7ed;
}

.credit-report-trigger.has-value {
  border-color: #1b68de;
}

.credit-report-trigger.is-expanded {
  border-color: #1b68de;
}

.trigger-prefix {
  color: #a8abb2;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.trigger-text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #a8abb2;
  font-size: 28rpx;
  padding-right: 30rpx;
}

.trigger-text.has-selected {
  color: #606266;
}

.trigger-suffix {
  color: #a8abb2;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
}

.arrow-icon {
  transition: transform 0.3s ease;
}

.arrow-icon.is-reverse {
  transform: rotate(90deg);
}

.clear-icon {
  font-size: 28rpx;
  color: #f56c6c;
}

/* 征信报告历史列表样式 */
.drawer-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 4;
  opacity: 0;
  transition: opacity 0.35s ease;
  pointer-events: auto;
}

.credit-history-drawer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transform: translateX(-100%);
  transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 5;
  background-color: #fff;
  overflow: hidden;
}

.credit-history-drawer.is-visible {
  transform: translateX(0);
}

.credit-history-content {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.full-panel {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.back-button {
  font-size: 28rpx;
  background: none;
  border: none;
  color: #1b68de;
  padding: 0;
  min-width: auto;
  height: auto;
}

.info-icon {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: #909399;
}

.no-padding {
  padding: 0 !important;
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 空数据提示样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 144rpx 0;
  background: #FFFFFF;
  border-radius: 8rpx;
  flex: 1;
}

.empty-state-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  max-width: 640rpx;
}

.empty-state-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f1f5fd;
  border-radius: 50%;
  font-size: 80rpx;
}

.empty-state-title {
  font-size: 32rpx;
  color: #262626;
  margin: 0;
  font-weight: 500;
  line-height: 36rpx;
}

.empty-state-description {
  font-size: 28rpx;
  color: #595959;
  margin-top: 8rpx;
  line-height: 28rpx;
  text-align: center;
}

/* ----------------- 响应式布局 ----------------- */
@media (max-width: 850px) {
  .finance-advisor-form {
    padding: 24rpx;
  }
  
  .form-container {
    border-radius: 12rpx;
  }
  
  .panel-content {
    padding: 24rpx 32rpx;
  }
  
  .form-actions {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .reset-button, .extract-button, .submit-button {
    width: 100%;
    flex: none;
  }
  
  .example-block {
    margin-top: 16rpx;
  }
  
  .example-quote {
    padding: 20rpx 24rpx;
  }
  
  .client-info-section {
    margin: 16rpx 0 24rpx 0;
    gap: 16rpx;
  }
  
  .tools-section {
    margin-top: 32rpx;
  }
  
  .tool-card {
    padding: 16rpx 20rpx;
  }
  
  .tool-icon {
    width: 72rpx;
    height: 72rpx;
    font-size: 36rpx;
  }
} 