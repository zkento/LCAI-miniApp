/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  background-color: rgba(255, 255, 255, 0.95);
  padding: 40rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #606266;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(8rpx);
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}



/* van-dropdown-menu 样式定制 */
.filter-dropdown-wrapper .van-dropdown-menu {
  --dropdown-menu-height: 68rpx;
  --dropdown-menu-background-color: #f8f9fa;
  --dropdown-menu-title-font-size: 28rpx;
  --dropdown-menu-title-text-color: #606266;
  --dropdown-menu-title-active-text-color: #1b68de;
  --dropdown-menu-option-active-color: #1b68de;
}

.filter-dropdown-wrapper .van-dropdown-menu__bar {
  height: 68rpx !important;
  background-color: #f8f9fa !important;
  border: 2rpx solid #dcdfe6 !important;
  border-radius: 34rpx !important;
  box-shadow: none !important;
}

/* 移除下拉面板阴影和圆角 */
.filter-dropdown-wrapper .van-dropdown-item__content {
  box-shadow: none !important;
  border-radius: 0 !important;
}

/* 针对 DropdownMenu 的弹出层移除全局 van-popup 圆角样式 */
.filter-dropdown-wrapper .van-dropdown-item .van-popup {
  border-radius: 0 !important;
}

/* 确保 DropdownMenu 的所有弹出相关元素都没有圆角 */
.filter-dropdown-wrapper .van-dropdown-item__wrapper {
  border-radius: 0 !important;
}

/* 针对 DropdownMenu 内部的 van-popup 组件，覆盖全局圆角样式 */
.filter-dropdown-wrapper .van-dropdown-item .van-popup.van-popup--top {
  border-radius: 0 !important;
}

.filter-dropdown-wrapper .van-dropdown-item .van-popup.van-popup--bottom {
  border-radius: 0 !important;
}

/* 确保 DropdownMenu 的选项容器没有圆角 */
.filter-dropdown-wrapper .van-dropdown-item {
  border-radius: 0 !important;
}

.filter-dropdown-wrapper .van-dropdown-menu__title {
  font-size: 28rpx !important;
  color: #606266 !important;
  /* padding: 0 24rpx !important; */
  line-height: 64rpx !important;
}


/* 下拉面板内容样式优化 */
.filter-dropdown-wrapper .van-dropdown-item__content {
  background-color: #ffffff;
  border-top: none !important; /* 移除顶部边框，实现无缝连接 */
  max-height: 60vh;
  overflow-y: auto;
  margin: 0 !important;
  padding: 0 !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); /* 添加轻微阴影增强层次感 */
}

/* 下拉选项样式 */
