/* 页面容器样式 */
.scroll-container {
  width: 100%;
  background-color: #f5f7fa;
  box-sizing: border-box;
}

/* ----------------- 基础布局 ----------------- */
.finance-advisor-form {
  width: 100%;
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f5f7fa;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
}

.form-container {
  width: 100%;
  max-width: 1000rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}

/* ----------------- 左侧输入面板 ----------------- */
.input-panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.description-hint {
  color: #606266;
  font-size: 28rpx;
  margin-bottom: 24rpx;
  line-height: 1.6;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 24rpx;
}

.requirements-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
  background-color: #fff;
}

.requirements-textarea[disabled] {
  background-color: #f5f7fa;
  color: #c0c4cc;
}

.name-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.name-input[disabled] {
  background-color: #f5f7fa;
  color: #c0c4cc;
}

/* 选择器样式 */
.picker-display {
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

/* 地区选择器样式 */
.area-selector {
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.area-selector.is-disabled {
  background-color: #f5f7fa;
  color: #c0c4cc;
  border-color: #e4e7ed;
}

/* .area-selector.has-value {
  border-color: #1b68de;
} */

.selected-text {
  color: #303133;
  font-size: 28rpx;
}

.placeholder-text {
  color: #A8ABB2;
  font-size: 28rpx;
}

/* 客户信息输入区域 */
.client-info-section {
  margin: 20rpx 0 30rpx 0;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 按钮区域 */
.form-actions {
  display: flex;
  flex-direction: column;
  margin-top: 12rpx;
  margin-bottom: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.reset-button, .extract-button, .submit-button {
  min-width: 200rpx;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
}

.reset-button {
  background-color: #fff;
  color: #606266;
  border: 2rpx solid #dcdfe6;
}

.reset-button.is-disabled {
  background-color: #fff;
  color: #c0c4cc;
  border: 2rpx solid #e4e7ed;
  opacity: 0.6;
}

/* 覆盖微信原生重置按钮禁用样式 */
button[disabled].reset-button {
  background-color: #fff !important;
  color: #c0c4cc !important;
  border: 2rpx solid #e4e7ed !important;
  opacity: 0.6 !important;
}

.time-counter {
  font-size: 28rpx;
  font-weight: 400;
}

.extract-button, .submit-button {
  background-color: #1b68de;
  color: #fff;
  border: none;
}

.extract-button.is-disabled, .submit-button.is-disabled {
  background-color: #1b68de;
  opacity: 0.6;
  color: #ffffff;
}

/* 覆盖微信原生button禁用样式 */
button[disabled].extract-button, button[disabled].submit-button {
  background-color: #1b68de !important;
  opacity: 0.6 !important;
  color: #ffffff !important;
}

.extract-button.loading, .submit-button.loading {
  opacity: 0.8;
}

/* ----------------- 面板通用样式 ----------------- */
.panel-header {
  padding: 0;
  border-bottom: 2rpx solid #eee;
  background-color: #f8f9fa;
  height: 100rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.panel-title {
  color: #000000;
  font-size: 36rpx;
  font-weight: 500;
  margin: 0;
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 重新提取按钮样式 */
.refresh-button {
  height: 54rpx;
  padding: 0 16rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  border: 2rpx solid #1b68de;
  color: #1b68de;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  flex-shrink: 0;
  min-width: auto;
  width: auto;
  max-width: 180rpx;
  transition: opacity 0.2s ease;
}

.refresh-button-wrapper {
  display: flex;
  align-items: center;
}

.refresh-button[disabled] {
  opacity: 0.6 !important;
}

.refresh-button.loading {
  opacity: 0.6 !important;
}

/* 覆盖微信原生button样式 */
button[disabled].refresh-button {
  color: #1b68de !important;
  background-color: #ffffff !important;
}

/* 自定义加载动画容器 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

/* 自定义加载动画 */
.custom-loading {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #1b68de;
  border-radius: 50% !important;
  border-top-color: transparent;
  animation: spin 0.8s linear infinite;
  margin-right: 10rpx;
  box-sizing: border-box !important;
  -webkit-border-radius: 50% !important;
  overflow: hidden;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.panel-content {
  padding: 20rpx 40rpx 30rpx 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* ----------------- 右侧内容面板 ----------------- */
.content-panel {
  width: 100%;
  min-width: 0;
  display: flex;
  flex-direction: column;
  position: relative;
}

.reference-content,
.analysis-content {
  display: flex;
  flex-direction: column;
  position: relative;
  opacity: 1;
  transition: opacity 0.35s ease;
  gap: 0;
}

.reference-content.is-background {
  opacity: 0.5;
  pointer-events: none;
  transition: opacity 0.35s ease;
}

/* 分析时间显示 */
.analysis-time {
  font-size: 28rpx;
  color: #909399;
  margin-left: 12rpx;
  font-weight: normal;
  white-space: nowrap;
}

/* ----------------- 需求参考部分 ----------------- */
.reference-section .section-title,
.example-block .section-title {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 16rpx;
  display: block;
}

.reference-items {
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reference-item {
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
}

.reference-item::before {
  content: "•";
  color: #606266;
  font-size: 36rpx;
  margin-right: 12rpx;
  line-height: 1;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.item-label {
  color: #606266;
  font-size: 28rpx;
  line-height: 1.5;
  flex: 1;
}

/* 示例部分 */
.example-section {
  margin-top: 32rpx;
}

/* .example-block {
  margin-top: 32rpx;
} */

.example-quote {
  margin: 0;
  padding: 24rpx 32rpx;
  background-color: #f8f9fb;
  border-radius: 8rpx;
  color: #909399;
  font-size: 26rpx;
  line-height: 1.6;
  white-space: pre-line;
  transition: background-color 0.2s;
}

.example-quote:active {
  background-color: #ecf5ff80;
}

