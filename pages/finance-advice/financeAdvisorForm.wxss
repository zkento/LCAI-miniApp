  background-color: #ffffff !important;
  transition: background-color 0.2s ease !important; /* 添加过渡动画 */
}

.filter-dropdown-wrapper .van-dropdown-item__option:last-child {
  border-bottom: none !important;
}

.filter-dropdown-wrapper .van-dropdown-item__option--active {
  color: #1b68de !important;
  font-weight: 500 !important;
  background-color: #f0f8ff !important; /* 更柔和的选中背景色 */
}

.filter-dropdown-wrapper .van-dropdown-item__icon {
  color: #1b68de !important;
}

