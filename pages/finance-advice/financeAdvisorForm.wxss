@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.7;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.credit-report-trigger.is-expanded {
  border-color: #1b68de;
}

.trigger-prefix {
  color: #a8abb2;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.trigger-text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #a8abb2;
  font-size: 28rpx;
  padding-right: 30rpx;
}

.trigger-text.has-selected {
  color: #303133;
}

.trigger-suffix {
  color: #a8abb2;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
}

/* 箭头图标样式 */
.van-cell__right-icon {
  font-size: 28rpx !important;
  color: #a8abb2 !important;
  transition: transform 0.3s ease;
}

.van-cell__right-icon.is-reverse {
  transform: rotate(90deg);
}

/* 清除图标样式 */
.clear-icon {
  font-size: 28rpx !important;
  color: #a8abb2 !important;
}

/* 保留原有arrow-icon样式以防兼容性问题 */
.arrow-icon {
  transition: transform 0.3s ease;
}

.arrow-icon.is-reverse {
  transform: rotate(90deg);
}

/* 征信报告历史列表样式 */
.drawer-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 4;
  opacity: 0;
  transition: opacity 0.35s ease;
  pointer-events: auto;
}

.credit-history-drawer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transform: translateX(-100%);
  transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 5;
  background-color: #fff;
  overflow: hidden;
}

.credit-history-drawer.is-visible {
  transform: translateX(0);
}

.credit-history-content {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.full-panel {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.back-button {
  font-size: 28rpx;
  background: none;
  border: none;
  color: #1b68de;
  padding: 0;
  min-width: auto;
  height: auto;
}

.info-icon {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: #909399;
}

.no-padding {
