.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.page-title-container {
  padding: 40rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.page-subtitle {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.service-list {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.service-card {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease-in-out;
}

.service-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
}

.service-icon {
  width: 96rpx;
  height: 96rpx;
  margin-right: 30rpx;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.service-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.service-desc {
  font-size: 26rpx;
  color: #888;
  line-height: 1.5;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}
