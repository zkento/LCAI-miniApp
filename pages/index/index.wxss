/* 页面容器 - 添加渐变背景 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1b68de, #1b68de);
  position: relative;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 标题容器 - 现代化设计 */
.page-title-container {
  padding: 60rpx 40rpx 80rpx;
  background: transparent;
  position: relative;
  z-index: 1;
  text-align: center;
  overflow: hidden;
}

.title-wrapper {
  position: relative;
  z-index: 2;
}

.page-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 1rpx;
  animation: fadeInUp 0.8s ease-out;
}

.page-subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.85);
  display: block;
  line-height: 1.6;
  font-weight: 400;
  animation: fadeInUp 0.8s ease-out 0.2s both;
}

/* 装饰性元素 */
.decorative-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 120rpx;
  height: 120rpx;
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.circle-2 {
  width: 80rpx;
  height: 80rpx;
  top: 60%;
  right: 15%;
  animation-delay: 2s;
}

.circle-3 {
  width: 60rpx;
  height: 60rpx;
  top: 40%;
  right: 30%;
  animation-delay: 4s;
}

/* 动画定义 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0rpx) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(180deg);
  }
}

/* 服务列表容器 */
.service-list {
  margin-top: -40rpx;
  padding: 0 45rpx;
  position: relative;
  z-index: 2;
}

/* 服务卡片 - 现代化设计 */
.service-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 30rpx 15rpx;
  border-radius: 28rpx;
  margin-bottom: 42rpx;
  box-shadow:
    0 8rpx 32rpx rgba(102, 126, 234, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  /* animation: slideInUp 0.6s ease-out; */
}

.service-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.service-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 28rpx;
}

.service-card:hover::before,
.service-card:active::before {
  opacity: 1;
}

.service-card:hover::after,
.service-card:active::after {
  opacity: 1;
}

.service-card:active {
  transform: translateY(2rpx) scale(0.995);
  box-shadow:
    0 4rpx 16rpx rgba(102, 126, 234, 0.15),
    0 1rpx 4rpx rgba(0, 0, 0, 0.06);
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 服务图标 - 增强视觉效果 */
.service-icon {
  width: 90rpx;
  height: 90rpx;
  margin: 0 18rpx;
  border-radius: 24rpx;
  background: #e3f2fd;
  padding: 16rpx;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.service-card:active .service-icon {
  transform: scale(0.95);
  background: #1b68de30;
}

.service-card:active .service-icon::before {
  width: 100rpx;
  height: 100rpx;
} 

/* 服务信息区域 */
.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0 10rpx;
}

/* 服务标题 - 优化字体层级 */
.service-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12rpx;
  line-height: 1.3;
  letter-spacing: 0.5rpx;
}

/* 服务描述 - 改进可读性 */
.service-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
  font-weight: 400;
}

/* 箭头图标 - 现代化设计 */
.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
  transition: all 0.3s ease;
  filter: brightness(0.8);
}

.service-card:active .arrow-icon {
  opacity: 0.8;
  transform: translateX(4rpx);
}

/* 响应式设计和安全区域适配 */
@media screen and (max-width: 750rpx) {
  .page-title-container {
    padding: 60rpx 30rpx 70rpx;
  }

  .page-title {
    font-size: 52rpx;
  }

  .service-card {
    padding: 44rpx 32rpx;
    margin-bottom: 28rpx;
  }

  .service-icon {
    width: 96rpx;
    height: 96rpx;
    margin-right: 28rpx;
  }
}

