<view class="container">
  <view class="page-title-container">
    <view class="title-wrapper">
      <text class="page-title">AI驱动的智能分析工具</text>
      <text class="page-subtitle">选择您需要的工具，开始AI辅助分析</text>
    </view>
    <view class="decorative-elements">
      <view class="circle circle-1"></view>
      <view class="circle circle-2"></view>
      <view class="circle circle-3"></view>
    </view>
  </view>

  <view class="service-list">
    <!-- 个人征信分析 -->
    <view class="service-card" data-url="/pages/credit-analyse/creditAnalyseForm?type=personal-credit" bindtap="navigateToService">
      <image class="service-icon" src="/assets/images/personal_credit.png"/>
      <view class="service-info">
        <text class="service-title">个人征信分析</text>
        <text class="service-desc">上传个人征信报告，获取专业分析和建议</text>
      </view>
      <image class="arrow-icon" src="/assets/images/arrow_right.png"/>
    </view>

    <!-- 企业征信分析 -->
    <view class="service-card" data-url="/pages/credit-analyse/creditAnalyseForm?type=business-credit" bindtap="navigateToService">
      <image class="service-icon" src="/assets/images/business_credit.png"/>
      <view class="service-info">
        <text class="service-title">企业征信分析</text>
        <text class="service-desc">上传企业征信报告，获取专业分析和建议</text>
      </view>
      <image class="arrow-icon" src="/assets/images/arrow_right.png"/>
    </view>

    <!-- 融资顾问报告 -->
    <view class="service-card" data-url="/pages/finance-advice/financeAdvisorForm" bindtap="navigateToService">
      <image class="service-icon" src="/assets/images/finance_advice.png"/>
      <view class="service-info">
        <text class="service-title">融资顾问报告</text>
        <text class="service-desc">描述客户融资需求，获取专业的融资报告</text>
      </view>
      <image class="arrow-icon" src="/assets/images/arrow_right.png"/>
    </view>

    <!-- 房产建议报告 -->
    <view class="service-card" data-url="/pages/property-advice/propertyAdvisorForm" bindtap="navigateToService">
      <image class="service-icon" src="/assets/images/property_advice.png"/>
      <view class="service-info">
        <text class="service-title">买家顾问报告</text>
        <text class="service-desc">描述客户置业需求，获取专业的置业报告</text>
      </view>
      <image class="arrow-icon" src="/assets/images/arrow_right.png"/>
    </view>
  </view>
</view>