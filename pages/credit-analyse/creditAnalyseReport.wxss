  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.pdf-preview-placeholder .pdf-icon {
  width: 120rpx;
  height: 120rpx;
