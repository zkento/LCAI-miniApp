/* 征信分析报告组件样式 */

/* --------- 1. 基础布局样式 --------- */
.credit-analyse-report {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 44px - env(safe-area-inset-top)); /* 减去导航栏高度：44px + 安全区域顶部 */
  width: 100%;
  position: relative;
  overflow: hidden;
  background-color: #f5f7fa;
  padding-bottom: env(safe-area-inset-bottom); /* 添加安全区域底部内边距 */
  margin-top: 0; /* 确保没有额外的上边距 */
  box-sizing: border-box; /* 确保padding不会增加总高度 */
}

.step-content {
  flex: 1;
  overflow: hidden;
  padding: 0;
  position: relative;
  display: flex;
  flex-direction: column;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.step-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-bottom: 20rpx;
  height: 100%;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

/* --------- 2. 步骤导航样式 --------- */
.steps-header {
  border-bottom: 1rpx solid #ebeef5;
  background-color: white;
  padding: 20rpx 0;
  flex-shrink: 0; /* 防止被压缩 */
  position: relative; /* 确保正常文档流定位 */
  z-index: 10; /* 确保在内容之上 */
}

.steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.step-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #c0c4cc;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.step.active .step-icon {
  background-color: #1b68de;
}

.step.completed .step-icon {
  background-color: #1b68de;
}

.step-title {
  font-size: 24rpx;
  color: #909399;
}

.step.active .step-title {
  color: #303133;
  font-weight: 500;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background-color: #c0c4cc;
  margin: 0 10rpx;
  position: relative;
  top: -20rpx;
}

.step-line.active {
  background-color: #1b68de;
}

/* --------- 3. 面板通用样式 --------- */
.panel-header {
  padding: 0 32rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #ebeef5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f5f7fa;
  z-index: 1;
}

.header-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
}

.header-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 12rpx;
}

.file-name {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #909399;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.thinking-status {
  font-size: 28rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 16rpx;
  display: inline-flex;
  align-items: center;
}

.thinking-status::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #1b5dd3;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: pulse 1s infinite;
}

.thinking-completed {
  font-size: 28rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 16rpx;
  display: inline-flex;
  align-items: center;
}

.thinking-completed::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #909399;
  border-radius: 50%;
  margin-right: 12rpx;
}

.report-duration, 
.response-status {
  font-size: 28rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 16rpx;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

/* 现代化头部操作按钮样式 - 查看征信文件 */
.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  height: 64rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #00c851 0%, #00a843 100%);
  color: white;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 200, 81, 0.25);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.action-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.action-button:hover::before {
  left: 100%;
}

.action-button:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 200, 81, 0.4);
}

.action-button::after {
  border: none !important;
}



/* 现代化头部按钮图标样式 */
.action-button .button-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.action-button:active .button-icon {
  transform: scale(0.9);
}

.panel-content {
  flex: 1;
  box-sizing: border-box;
  background-color: #fff;
  width: 100%;
  overflow: hidden; /* 修改为不允许自身滚动 */
  position: relative;
}

/* --------- 4. 文件提取和预览样式 --------- */
.extraction-layout-new {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.extracted-text-full {
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-bottom: 120rpx; /* 为悬浮按钮留出空间 */
}

/* 悬浮的查看文件按钮 */
.floating-file-button {
  position: fixed;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #1b68de 0%, #4285f4 100%);
  color: white;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(27, 104, 222, 0.3);
  z-index: 99;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.floating-file-button:active {
  transform: translateX(-50%) scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(27, 104, 222, 0.4);
}

.floating-file-button .button-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 现代化统一胶囊悬浮按钮样式 */
.unified-floating-button {
  position: fixed;
  bottom: calc(48rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  background: #1b68de;
  border-radius: 56rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15), 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  z-index: 99;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20rpx);
  color: white;
  
}

/* 现代化按钮区域基础样式 */
.button-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 44rpx;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  flex: 1;
  min-width: 180rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.button-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.button-section:active::before {
  opacity: 1;
}

.button-section:active {
  transform: scale(0.96);
}

/* 现代化按钮图标样式 */
.button-section .button-icon {
  width: 40rpx;
  height: 40rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.button-section:active .button-icon {
  transform: scale(0.9);
}

/* 现代化左侧区域样式 - 新的任务 */
.left-section {
  background: #1b68de;
  border-radius: 52rpx 0 0 52rpx;
  position: relative;
  overflow: hidden;
}

.left-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.left-section:active::before {
  left: 100%;
}

.left-section:active {
  background: #1b68de;
  transform: scale(0.96);
}

/* 现代化右侧区域样式 - 分享 */
.right-section {
  background: #1b68de;
  border-radius: 0 52rpx 52rpx 0;
  position: relative;
  overflow: hidden;
}

.right-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.right-section:active::before {
  left: 100%;
}

.right-section:active {
  background: #1b68de;
  transform: scale(0.96);
}

/* 现代化分割线样式 */
.button-divider {
  width: 1rpx;
  height: 64rpx;
  background: linear-gradient(to bottom,
    transparent 0%,
    rgba(255, 255, 255, 0.5) 20%,
    rgba(255, 255, 255, 0.9) 50%,
    rgba(255, 255, 255, 0.5) 80%,
    transparent 100%
  );
  flex-shrink: 0;
  margin: 0 1rpx;
}

/* 保留原有样式以兼容其他地方的使用 */
.extraction-layout {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.extracted-text {
  height: 70%;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #ebeef5;
  overflow: hidden;
}

.original-file {
  height: 30%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  min-height: 240rpx;
}

.file-preview {
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.file-preview image.preview-image-content {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.file-placeholder,
.text-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #909399;
  position: relative;
  top: -60rpx; /* 向上偏移60rpx，让文字稍微靠上显示 */
  font-size: 32rpx; 
  font-weight: 400; 
}

.placeholder-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 32rpx;
}

.text-content {
  padding: 32rpx;
  white-space: pre-wrap;
  line-height: 1.6;
  word-break: break-all;
  word-wrap: break-word;
  box-sizing: border-box;
  color: #606266;
  font-size: 28rpx;
}

/* 进度条样式 */
.progress-container {
  /* width: 240rpx; */
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #909399;
}

/* --------- 5. AI思考和处理相关样式 --------- */
/* AI处理中的居中提示 */
.ai-working-center {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.75);
  border-radius: 20rpx;
  padding: 40rpx 60rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.2);
}

.ai-tip-center {
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

/* 保留原有样式以兼容其他地方的使用 */
.working-overlay {
  position: fixed;
  left: 50%;
  bottom: calc(80rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  width: 480rpx;
  border-radius: 16rpx;
  z-index: 100;
  padding: 20rpx 32rpx;
  background-color: rgba(0, 0, 0, 0.65);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ai-tip {
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #ffffff;
  border-top: 4rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  display: inline-block;
}

/* 思考容器样式 */
.thinking-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color: #ffffff;
  flex: 1;
  min-height: 0; /* 确保flex子元素能正确收缩 */
  position: relative; /* 确保正常文档流定位 */
}

.thinking-display {
  flex: 1;
  height: calc(100% - 26rpx); /* 确保AI输出的思考内容可以滚动到最底部 */
  width: calc(100% - 32rpx); 
  font-size: 28rpx;
  line-height: 1.6;
  color: #606266;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 16rpx;
  box-sizing: border-box;
  transition: opacity 0.3s ease;
}

#thinking-content {
  padding: 32rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
  font-family: monospace;
  text-align: left;
  box-sizing: border-box;
}

.thinking-display.dimmed {
  opacity: 0.5;
}

.Ai-thinking-container {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  position: relative;
  overflow: hidden; /* 改为hidden，让scroll-view处理滚动 */
  display: flex;
  flex-direction: column;
  flex: 1; /* 确保占据可用空间 */
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

/* 生成报告过程中的悬浮提示 */
.generating-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  pointer-events: none;
}

.generating-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 40rpx 60rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.3s ease;
}

.generating-content .loading-spinner {
  width: 72rpx;
  height: 72rpx;
  border: 6rpx solid #c3c3c3;
  border-top: 6rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.generating-message {
  font-size: 28rpx;
  font-weight: 400;
  color: #ffffff;
  white-space: nowrap;
}

/* --------- 6. 报告样式 --------- */
.report-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
  flex: 1; /* 确保占据可用空间 */
  min-height: 0; /* 确保flex子元素能正确收缩 */
  position: relative; /* 确保正常文档流定位 */
}

.report-content {
  padding: 32rpx 32rpx calc(160rpx + env(safe-area-inset-bottom)) 32rpx; /* 为统一胶囊按钮留出空间 */
  line-height: 1.8; /* 增加行间距 */
  font-size: 30rpx; /* 稍微增大基础字号 */
  height: 100%;
  color: #333333; /* 更深的文字颜色提高可读性 */
}

/* 优化 Markdown 内容显示样式 - 参考主流移动端排版 */
.report-content rich-text {
  display: block;
  width: 100%;
}

/* 标题样式优化 - 参考微信文章、知乎等主流排版 */
.report-content h1 {
  font-size: 40rpx !important; /* 一级标题 */
  font-weight: 600 !important;
  color: #1a1a1a !important;
  line-height: 1.4 !important;
  margin: 48rpx 0 32rpx 0 !important;
  padding-bottom: 16rpx !important;
  border-bottom: 2rpx solid #e8e8e8 !important;
}

.report-content h2 {
  font-size: 36rpx !important; /* 二级标题 */
  font-weight: 600 !important;
  color: #2c2c2c !important;
  line-height: 1.4 !important;
  margin: 40rpx 0 24rpx 0 !important;
}

.report-content h3 {
  font-size: 32rpx !important; /* 三级标题 */
  font-weight: 500 !important;
  color: #404040 !important;
  line-height: 1.4 !important;
  margin: 32rpx 0 20rpx 0 !important;
}

.report-content p {
  font-size: 30rpx !important;
  line-height: 1.8 !important;
  color: #333333 !important;
  margin: 0 0 24rpx 0 !important;
  text-align: justify !important; /* 两端对齐 */
}

.report-content strong {
  font-weight: 600 !important;
  color: #1a1a1a !important;
}

/* 列表样式优化 */
.report-content ul, .report-content ol {
  margin: 16rpx 0 24rpx 0 !important;
  padding-left: 32rpx !important;
}

.report-content li {
  font-size: 30rpx !important;
  line-height: 1.7 !important;
  color: #333333 !important;
  margin-bottom: 12rpx !important;
}

/* --------- 7. 动画效果 --------- */
@keyframes pulse {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
  100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes fadeIn {
  from { 
    opacity: 0; 
    transform: translateY(-20rpx); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

