/* 历史记录页面样式 */

/* 页面容器 */
.history-page {
  height: 100vh;
  background-color: #f5f7fa;
  display: flex;
  flex-direction: column;
}

/* 页面头部区域 */
.page-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 搜索容器 */
.search-container {
  background-color: #ffffff;
  /* padding: 24rpx 32rpx; */
  border-bottom: 1rpx solid #f0f0f0;
}

/* 筛选按钮 */
.filter-action {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 44rpx;
  min-height: 44rpx;
  padding: 0 32rpx 0 16rpx;
  margin-right: 0;
}

/* 页面内容区域 */
.page-content {
  height: calc(100vh - 275rpx); /* 减去头部高度 */
  padding-top: 275rpx; /* 为固定头部留出空间 */
}

/* 任务统计信息 */
.stats-container {
  display: flex;
  background-color: #ffffff;
  padding: 32rpx;
  margin: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.stats-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 60rpx;
  background-color: #f0f0f0;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #1b68de;
  line-height: 1;
}

.stats-label {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 8rpx;
}

/* 任务列表 */
.task-list {
  padding: 0 32rpx 32rpx 32rpx; /* 确保左右对称的边距 */
}

/* 骨架屏样式 */
.skeleton-item {
  margin-bottom: 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 任务卡片 */
.task-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
}

.task-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 状态标签角标 */
.status-tag-corner {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  z-index: 999;
  pointer-events: none; /* 防止阻挡点击事件 */
}

/* 确保状态标签可见 */
.status-tag-corner .van-tag {
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  margin-top: 24rpx; /* 为状态标签留出更多空间 */
}

.task-type {
  display: flex;
  align-items: center;
  flex: 1;
}

.type-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #606266;
  margin-left: 12rpx;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-text {
  font-size: 32rpx;
  color: #606266;
  margin-left: 12rpx;
}

/* 卡片底部 */
.card-footer {
  margin-bottom: 24rpx;
}

.time-info,
.expected-time {
  display: flex;
  align-items: center;
  margin: 12rpx;
}

.time-label,
.expected-label {
  font-size: 30rpx;
  color: #909399;
}

.time-value,
.expected-value {
  font-size: 30rpx;
  color: #909399;
}

.queue-info {
  margin-bottom: 12rpx;
}

.queue-text {
  font-size: 24rpx;
  color: #1b68de;
  background-color: #e6f4ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 卡片操作 */
.card-actions {
  display: flex;
  gap: 16rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  /* padding: 32rpx; */
  color: #8c8c8c;
}

.load-more-text {
  font-size: 28rpx;
  margin-left: 16rpx;
}

/* 没有更多数据 */
.no-more {
  padding: 32rpx 0; 
  text-align: center;
  margin: 0 32rpx; 
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 筛选弹窗 */
.filter-popup {
  background-color: #ffffff;
  border-radius: 12rpx;
  max-height: 70vh;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.filter-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
}

.filter-content {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 48rpx;
}

.filter-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 24rpx;
}

.filter-checkbox {
  margin-bottom: 16rpx;
}

.filter-actions {
  display: flex;
  padding: 32rpx 32rpx 32rpx 32rpx;
  gap: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.filter-btn {
  flex: 1;
}

/* 操作按钮样式 */
.card-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 16rpx;
  gap: 16rpx;
}

.action-btn {
  min-width: 120rpx !important;
  height: 56rpx !important;
  font-size: 24rpx !important;
}

.status-text {
  font-size: 24rpx;
  color: #909399;
  padding: 8rpx 16rpx;
}

.status-text.cancelled {
  color: #f56c6c;
}

/* 详情弹窗 */
.detail-popup {
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
}

.detail-content {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-item {
  display: flex;
  margin-bottom: 16rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #8c8c8c;
  min-width: 160rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #262626;
  flex: 1;
}

.detail-section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 16rpx;
}

.detail-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 文件列表 */
.file-list {
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.file-item:last-child {
  border-bottom: none;
}

.file-item:active {
  background-color: #f5f7fa;
}

.file-name {
  font-size: 28rpx;
  color: #262626;
  margin-left: 12rpx;
  flex: 1;
}

/* Vant 组件自定义样式 */
.van-tag--primary {
  background-color: #e6f4ff;
  color: #1b68de;
  border: 1rpx solid #1b68de;
}

.van-tag--success {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #52c41a;
}

.van-tag--warning {
  background-color: #fffbe6;
  color: #faad14;
  border: 1rpx solid #faad14;
}

.van-tag--danger {
  background-color: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.van-tag--default {
  background-color: #f5f5f5;
  color: #8c8c8c;
  border: 1rpx solid #d9d9d9;
}

.van-button--primary {
  background-color: #1b68de;
  border-color: #1b68de;
}

.van-button--primary:active {
  background-color: #1454c7;
  border-color: #1454c7;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .history-page {
    background-color: #1a1a1a;
  }

  .page-header {
    background-color: #2a2a2a;
  }

  .search-container,
  .stats-container,
  .task-card,
  .filter-popup,
  .detail-popup {
    background-color: #2a2a2a;
    border-color: #3a3a3a;
  }

  .type-text,
  .detail-title,
  .filter-title,
  .detail-value,
  .file-name {
    color: #ffffff;
  }

  .info-text,
  .time-value,
  .expected-value,
  .detail-description {
    color: #cccccc;
  }

  .time-label,
  .expected-label,
  .detail-label {
    color: #999999;
  }
}
