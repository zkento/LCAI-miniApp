/* 历史记录页面样式 */

/* 页面容器 */
.history-page {
  height: 100vh;
  background-color: #f5f7fa;
  display: flex;
  flex-direction: column;
}

/* 页面头部区域 */
.page-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  /* background-color: #ffffff; */
  /* box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1); */
}

/* 搜索容器 */
.search-container {
  background-color: #ffffff;
  /* padding: 24rpx 32rpx; */
  /* border-bottom: 1rpx solid #f0f0f0; */
}

/* 筛选按钮 */
.filter-action {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 44rpx;
  min-height: 44rpx;
  padding: 0 32rpx 0 16rpx;
  margin-right: 0;
  position: relative; /* 添加相对定位，用于放置筛选指示点 */
}

/* 筛选指示点 - 蓝色圆点 */
.filter-indicator {
  position: absolute;
  top: 0;
  right: 20rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #1b68de;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
}

/* 筛选图标特殊处理 - 解决iOS真机显示问题 */
.filter-icon {
  font-family: 'vant-icon' !important;
  font-size: 22px !important;
  color: #606060 !important;
  display: inline-block !important;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 任务统计信息 */
.stats-container {
  display: flex;
  background-color: #ffffff;
  padding: 16rpx;
  margin-bottom: 32rpx;
  /* border-radius: 16rpx; */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.stats-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 60rpx;
  background-color: #f0f0f0;
}

.stats-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #606266;
  line-height: 1;
}

.stats-label {
  font-size: 20rpx;
  color: #8c8c8c;
  margin-top: 8rpx;
}

/* 任务列表 */
.task-list {
  padding: 0 32rpx 32rpx 32rpx; /* 确保左右对称的边距 */
}

/* 骨架屏样式 */
.skeleton-item {
  margin-bottom: 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 任务卡片 */
.task-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
}

.task-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 自定义状态标签容器 */
.custom-status-tag {
  position: absolute;
  top: 20rpx;
  left: 24rpx;
  z-index: 999;
  pointer-events: none; /* 防止阻挡点击事件 */
}

/* 状态标签基础样式 */
.status-tag {
  display: inline-block;
  padding: 8rpx 12rpx;
  font-size: 26rpx;
  font-weight: 400;
  border-radius: 6rpx;
  line-height: 1.3;
}

/* 进行中状态 - 蓝色 */
.status-tag-processing {
  background-color: #e5edfa;
  color: #1b68de;
  border: 1rpx solid #cbdbf6;
}

/* 排队中状态 - 灰色 */
.status-tag-waiting {
  background-color: #f4f4f5;
  color: #909399;
  border: 1rpx solid #e9e9eb;
}

/* 已完成状态 - 绿色 */
.status-tag-completed {
  background-color: #f6ffed;
  color: #67c23a;
  border: 1rpx solid #e1f3d8;
}

/* 任务失败状态 - 红色 */
.status-tag-failed {
  background-color: #fef0f0;
  color: #f56c6c;
  border: 1rpx solid #fde2e2;
}

/* 已取消状态 - 橙色 */
.status-tag-cancelled {
  background-color: #fff3e0;
  color: #ff9800;
  border: 1rpx solid #ffe5cc;
}

/* 默认状态 */
.status-tag-default {
  background-color: #f4f4f5;
  color: #909399;
  border: 1rpx solid #e9e9eb;
}

/* 排队位置角标 - 右上角 */
.queue-position-corner {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  z-index: 998;
  pointer-events: none;
}

.queue-position-text {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 0 12rpx 0 12rpx;
  font-weight: 400;
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  margin-top: 64rpx; /* 为自定义状态标签留出更多空间 */
}

.task-type {
  display: flex;
  align-items: center;
  flex: 1;
}

.type-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-text {
  font-size: 32rpx;
  color: #303133;
}

/* 卡片底部 */
.card-footer {
  margin-bottom: 12rpx;
}
.time-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.time-label {
  font-size: 30rpx;
  color: #606266;
}

.time-value {
  font-size: 30rpx;
  color: #606266;
}

.expected-time {
  display: flex;
  align-items: center;
}

.expected-label {
  font-size: 30rpx;
  color: #606266;
}

.expected-value {
  font-size: 30rpx;
  color: #606266;
}


.queue-info {
  margin-bottom: 12rpx;
}

.queue-text {
  font-size: 24rpx;
  color: #1b68de;
  background-color: #e6f4ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 卡片操作 */
.card-actions {
  display: flex;
  gap: 16rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  /* padding: 32rpx; */
  color: #8c8c8c;
}

.load-more-text {
  font-size: 28rpx;
  margin-left: 16rpx;
}

/* 没有更多数据 */
.no-more {
  padding: 32rpx 0; 
  text-align: center;
  margin: 0 32rpx; 
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 筛选弹窗 */
.filter-popup {
  background-color: #ffffff;
  /* 移除圆角 */
  border-radius: 0;
  max-height: 70vh;
  overflow: hidden;
  width: 100%;
  /* 移除阴影，与搜索框无缝连接 */
  box-shadow: none;
}

.filter-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
}

.filter-content {
  padding: 16rpx 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 32rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-row {
  display: flex;
  flex-direction: column;
}

.filter-label {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 20rpx;
}

/* 选项容器 */
.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

/* 选项样式 */
.filter-option {
  padding: 12rpx 24rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #606266;
  text-align: center;
  min-width: 120rpx;
  transition: all 0.2s ease;
  border: 1rpx solid transparent;
}

/* 选中状态 */
.filter-option.active {
  background-color: #e5edfa;
  color: #1b68de;
  font-weight: 500;
  border: 1rpx solid #1b68de;
  box-shadow: 0 2rpx 8rpx rgba(27, 104, 222, 0.1);
}

/* 底部操作区域 */
.filter-actions {
  display: flex;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafafa;
  justify-content: center;
}

/* 清空按钮 */
.filter-clear {
  display: flex;
  align-items: center;
  color: #909399;
  font-size: 28rpx;
}

.filter-clear text {
  margin-left: 8rpx;
}

/* 筛选弹窗按钮样式 */
.filter-btn {
  flex: 1;
  height: 88rpx !important;
  line-height: 88rpx !important;
  font-size: 32rpx !important;
  border-radius: 8rpx !important;
}

/* 确保Vant按钮在筛选弹窗中的高度正确 */
.filter-actions .van-button {
  height: 88rpx !important;
  line-height: 88rpx !important;
}

/* 操作按钮样式 */
.card-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 16rpx;
  gap: 16rpx;
}

.action-btn {
  min-width: 100rpx !important;
  height: 56rpx !important;
  font-size: 24rpx !important;
}

.status-text {
  font-size: 24rpx;
  color: #909399;
  padding: 8rpx 16rpx;
}

.status-text.cancelled {
  color: #f56c6c;
}

/* 详情弹窗 */
.detail-popup {
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
}

.detail-content {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-item {
  display: flex;
  margin-bottom: 26rpx;
}

.detail-label {
  font-size: 30rpx;
  color: #8c8c8c;
  min-width: 160rpx;
}

.detail-value {
  font-size: 30rpx;
  color: #262626;
  flex: 1;
}

/* 无文件显示样式 */
.no-file {
  color: #ccc;
  font-style: italic;
}

/* 内联文件列表样式 */
.file-list-inline {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.file-item-inline {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.file-view-link {
  color: #1b68de;
  font-size: 30rpx;
  font-weight: 500;
}

.detail-section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 16rpx;
}

.detail-description {
  font-size: 30rpx;
  color: #666666;
  line-height: 1.6;
}

/* 文件列表 */
.file-list {
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.file-item:last-child {
  border-bottom: none;
}

.file-item:active {
  background-color: #f5f7fa;
}

.file-name {
  font-size: 28rpx;
  color: #262626;
  margin-left: 12rpx;
  flex: 1;
}

/* 操作按钮区域 */
.detail-actions {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: center;
  background: #ffffff;
}

/* Vant 组件自定义样式 */
.van-tag--primary {
  background-color: #e6f4ff;
  color: #1b68de;
  border: 1rpx solid #1b68de;
}

.van-tag--success {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #52c41a;
}

.van-tag--warning {
  background-color: #fffbe6;
  color: #faad14;
  border: 1rpx solid #faad14;
}

.van-tag--danger {
  background-color: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.van-tag--default {
  background-color: #f5f5f5;
  color: #8c8c8c;
  border: 1rpx solid #d9d9d9;
}

.van-button--primary {
  background-color: #1b68de;
  border-color: #1b68de;
}

.van-button--primary:active {
  background-color: #1454c7;
  border-color: #1454c7;
}
