/* 历史记录页面样式 */
.history-page {
  min-height: 100vh;
  background-color: #f7f8fa;
}

/* 页面内容 */
.page-content {
  padding-top: calc(var(--status-bar-height) + 88rpx); /* 导航栏高度 */
}

/* 搜索和筛选区域 */
.search-section {
  background-color: #ffffff;
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.search-container {
  margin-bottom: 16rpx;
}

.task-stats {
  padding: 16rpx 0;
  border-top: 1rpx solid #ebedf0;
}

.stats-text {
  font-size: 28rpx;
  color: #969799;
  line-height: 1.4;
}

/* 可滚动的任务列表容器 */
.task-list-scroll-container {
  flex: 1;
  height: calc(100vh - var(--status-bar-height) - 88rpx - 200rpx); /* 减去导航栏和搜索区域高度 */
  padding: 0 32rpx;
}

/* 任务列表容器 - 保持兼容性 */
.task-list-container {
  padding: 0 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

/* 空状态 */
.empty-container {
  padding: 80rpx 0;
}

/* 任务列表 */
.task-list {
  padding-bottom: 32rpx;
}

/* 任务卡片 */
.task-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  border: 2rpx solid transparent;
}

.task-card:active {
  opacity: 0.8;
  transition: opacity 0.1s ease;
}

.task-card:last-child {
  margin-bottom: 0;
}

/* 队列位置标记 */
.queue-position {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #ff6b6b, #ffa726);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 0 16rpx 0 16rpx;
  z-index: 1;
}

/* 任务头部 */
.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.task-type {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

/* 任务信息 */
.task-info {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  line-height: 1.4;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #969799;
  margin-right: 16rpx;
  min-width: 140rpx;
}

.value {
  color: #323233;
  flex: 1;
  word-break: break-all;
}

/* 时间信息 */
.time-info {
  padding-top: 16rpx;
  border-top: 1rpx solid #ebedf0;
}

.time-text {
  font-size: 26rpx;
  color: #1b68de;
  font-weight: 500;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0;
}

.load-more-text {
  font-size: 28rpx;
  color: #969799;
}

/* 没有更多数据 */
.no-more {
  padding: 32rpx 0;
}

/* 导航栏右侧 */
.nav-right {
  display: flex;
  align-items: center;
  padding: 0 16rpx;
}

/* 筛选弹窗 */
.filter-popup {
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.filter-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
}

.filter-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
  margin-bottom: 24rpx;
}

.filter-actions {
  padding-top: 24rpx;
  border-top: 1rpx solid #ebedf0;
}

/* 任务详情弹窗 */
.task-detail-popup {
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
  flex: 1;
  margin-right: 16rpx;
}

.detail-content {
  margin-bottom: 32rpx;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.progress-info {
  padding: 24rpx;
  background-color: #f7f8fa;
  border-radius: 12rpx;
}

.progress-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
  margin-bottom: 8rpx;
}

.queue-info {
  font-size: 28rpx;
  color: #969799;
}

.detail-actions {
  padding-top: 24rpx;
  border-top: 1rpx solid #ebedf0;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .page-content {
    padding-top: calc(var(--status-bar-height) + 80rpx);
  }
  
  .search-section {
    padding: 20rpx 24rpx;
  }
  
  .task-list-container {
    padding: 0 24rpx;
  }
  
  .task-card {
    padding: 24rpx;
  }
  
  .task-type {
    font-size: 30rpx;
  }
  
  .info-row {
    font-size: 26rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .history-page {
    background-color: #1a1a1a;
  }
  
  .search-section {
    background-color: #2a2a2a;
  }
  
  .task-card {
    background-color: #2a2a2a;
    box-shadow: 0 4rpx 16rpx rgba(255, 255, 255, 0.05);
  }
  
  .task-type {
    color: #ffffff;
  }
  
  .value {
    color: #e5e5e5;
  }
  
  .label {
    color: #999999;
  }
  
  .stats-text {
    color: #999999;
  }
  
  .filter-popup,
  .task-detail-popup {
    background-color: #2a2a2a;
  }
  
  .filter-title,
  .detail-title,
  .section-title {
    color: #ffffff;
  }
  
  .progress-info {
    background-color: #1a1a1a;
  }
  
  .progress-text {
    color: #ffffff;
  }
  
  .queue-info {
    color: #999999;
  }
}

/* 安全区域适配 */
.history-page {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 触摸优化 */
.task-card,
.nav-right {
  -webkit-tap-highlight-color: transparent;
  user-select: none;
}

/* 滚动优化 */
.task-list-scroll-container {
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

.task-list-container {
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

.filter-popup,
.task-detail-popup {
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

/* 长按效果 - 已在上面定义，移除重复 */

/* 按钮点击效果 */
.nav-right:active {
  opacity: 0.7;
  transition: opacity 0.1s ease;
}

/* 加载动画优化 */
.loading-container {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 卡片进入动画 - 移除自动动画，避免全屏缩放问题 */
.task-card {
  /* animation: slideInUp 0.3s ease-out; */
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 弹窗动画优化 */
.filter-popup,
.task-detail-popup {
  animation: slideInBottom 0.3s ease-out;
}

@keyframes slideInBottom {
  from {
    opacity: 0;
    transform: translateY(100%);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 搜索框聚焦效果 */
.search-container {
  transition: all 0.3s ease;
}

/* 状态标签动画 */
.task-header van-tag {
  transition: all 0.2s ease;
}

/* 队列位置标记动画 */
.queue-position {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}
