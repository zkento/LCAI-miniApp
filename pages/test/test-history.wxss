/* 历史记录功能测试页面样式 */
.test-page {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.test-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.test-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #323233;
}

.test-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.test-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.component-tests {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.component-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.component-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #646566;
}

.test-filter-action {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1b68de;
  gap: 8rpx;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.test-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 1rpx solid #ebedf0;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.task-type {
  font-size: 28rpx;
  font-weight: 600;
  color: #323233;
  flex: 1;
  margin-right: 16rpx;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.customer-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.customer-name {
  font-size: 24rpx;
  color: #646566;
}

.time-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  gap: 8rpx;
}

.time-label {
  color: #969799;
}

.time-value {
  color: #646566;
}

.test-results {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.result-text {
  font-size: 28rpx;
  color: #646566;
}

.test-actions {
  margin-top: 48rpx;
}
