/* 购房建议报告组件样式 */

/* --------- 1. 基础布局样式 --------- */
.property-advisor-report {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 44px - env(safe-area-inset-top)); /* 减去导航栏高度：44px + 安全区域顶部 */
  width: 100%;
  position: relative;
  overflow: hidden;
  background-color: #f5f7fa;
  padding-bottom: env(safe-area-inset-bottom); /* 添加安全区域底部内边距 */
  margin-top: 0; /* 确保没有额外的上边距 */
  box-sizing: border-box; /* 确保padding不会增加总高度 */
}

/* 自定义van-tabs主题色 */
page {
  --tabs-line-color: #1b68de;
  --tabs-active-text-color: #1b68de;
  --tabs-default-color: #646566;
  --button-primary-background-color: #1b68de;
  --button-primary-border-color: #1b68de;
}

/* 强制覆盖van-tabs样式 */
.van-tabs__line {
  background-color: #1b68de !important;
}

.van-tab--active {
  color: #1b68de !important;
}

.van-tab {
  color: #646566 !important;
}

.van-tab--active .van-tab__text {
  color: #1b68de !important;
}

.van-tab__text {
  color: #646566 !important;
}

/* 确保激活状态的标签页文字颜色 */
.van-tabs__content .van-tab--active {
  color: #1b68de !important;
}

.step-content {
  flex: 1;
  overflow: hidden;
  padding: 0;
  position: relative;
  display: flex;
  flex-direction: column;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.step-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-bottom: 20rpx;
  height: 100%;
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

/* --------- 2. 步骤导航样式 --------- */
.steps-header {
  border-bottom: 1rpx solid #ebeef5;
  background-color: white;
  padding: 20rpx 0;
  flex-shrink: 0; /* 防止被压缩 */
  position: relative; /* 确保正常文档流定位 */
  z-index: 10; /* 确保在内容之上 */
}

.steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.step-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #c0c4cc;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.step.active .step-icon {
  background-color: #1b68de;
}

.step.completed .step-icon {
  background-color: #1b68de;
}

.step-title {
  font-size: 24rpx;
  color: #909399;
}

.step.active .step-title {
  color: #303133;
  font-weight: 500;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background-color: #c0c4cc;
  margin: 0 10rpx;
  position: relative;
  top: -20rpx;
}

.step-line.active {
  background-color: #1b68de;
}

/* --------- 3. 面板通用样式 --------- */
.panel-header {
  padding: 0 32rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #ebeef5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1;
}

.header-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
}

.header-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 12rpx;
}

.thinking-status {
  font-size: 28rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 16rpx;
  display: inline-flex;
  align-items: center;
}

.thinking-status::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #1b5dd3;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: pulse 1s infinite;
}

.thinking-completed {
  font-size: 28rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 16rpx;
  display: inline-flex;
  align-items: center;
}

.thinking-completed::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #909399;
  border-radius: 50%;
  margin-right: 12rpx;
}

.report-duration {
  font-size: 28rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 16rpx;
}

.panel-content {
  flex: 1;
  overflow: hidden;
  position: relative;
  height: 100%;
}

/* --------- 4. AI思考过程样式 --------- */
.Ai-thinking-container {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  position: relative;
  overflow: hidden; /* 改为hidden，让scroll-view处理滚动 */
  display: flex;
  flex-direction: column;
  flex: 1; /* 确保占据可用空间 */
  min-height: 0; /* 确保flex子元素能正确收缩 */
}

.ai-working-center {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.75);
  border-radius: 20rpx;
  padding: 40rpx 60rpx;
}

.ai-tip-center {
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #ffffff;
  border-top: 4rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  display: inline-block;
}

/* 思考容器样式 */
.thinking-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color: #ffffff;
  flex: 1;
  min-height: 0; /* 确保flex子元素能正确收缩 */
  position: relative; /* 确保正常文档流定位 */
}

.thinking-display {
  flex: 1;
  height: calc(100% - 26rpx); /* 确保AI输出的思考内容可以滚动到最底部 */
  width: calc(100% - 32rpx); 
  font-size: 28rpx;
  line-height: 1.6;
  color: #606266;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 16rpx;
  box-sizing: border-box;
  transition: opacity 0.3s ease;
}

#thinking-content {
  padding: 32rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
  font-family: monospace;
  text-align: left;
  box-sizing: border-box;
}

.thinking-display.dimmed {
  opacity: 0.5;
}

/* 生成报告过程中的悬浮提示 */
.generating-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  pointer-events: none;
}

.generating-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 40rpx 60rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.3s ease;
}

.generating-content .loading-spinner {
  width: 72rpx;
  height: 72rpx;
  border: 6rpx solid #c3c3c3;
  border-top: 6rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.generating-message {
  font-size: 28rpx;
  font-weight: 400;
  color: #ffffff;
  white-space: nowrap;
}

@keyframes fadeIn {
  from { 
    opacity: 0; 
    transform: translateY(-20rpx); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}

/* --------- 5. 报告内容样式 --------- */
.report-tab-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.report-tabs {
  width: 100%;
}

.tab-content-wrapper {
  padding: 0;
  display: flex;
  flex-direction: column;
  height: 100%;
  min-height: calc(100vh - 300rpx); /* 确保内容区域足够高 */
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom)); /* 为统一胶囊按钮留出空间 */
}

/* 报告内容区域样式 */
.report-content {
  height: 100%;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 思考过程内容区域样式 */
.thinking-content {
  height: 100%;
  padding: 32rpx;
  box-sizing: border-box;
}

.thinking-process {
  white-space: pre-wrap;
  font-size: 32rpx;
  line-height: 1.8;
  color: #303133;
}

/* --------- 6. 胶囊按钮样式 --------- */
/* 现代化统一胶囊悬浮按钮样式 */
.unified-floating-button {
  position: fixed;
  bottom: calc(48rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  background: #1b68de;
  border-radius: 56rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15), 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  z-index: 99;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20rpx);
  color: white;
}

/* 现代化按钮区域基础样式 */
.button-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 44rpx;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  flex: 1;
  min-width: 180rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.button-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.button-section:active::before {
  opacity: 1;
}

.button-section:active {
  transform: scale(0.96);
}

/* 现代化按钮图标样式 */
.button-section .button-icon {
  width: 40rpx;
  height: 40rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.button-section:active .button-icon {
  transform: scale(0.9);
}

/* 现代化左侧区域样式 - 新的任务 */
.left-section {
  background: #1b68de;
  border-radius: 52rpx 0 0 52rpx;
  position: relative;
  overflow: hidden;
}

.left-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.left-section:active::before {
  left: 100%;
}

.left-section:active {
  background: #1b68de;
  transform: scale(0.96);
}

/* 现代化右侧区域样式 - 分享 */
.right-section {
  background: #1b68de;
  border-radius: 0 52rpx 52rpx 0;
  position: relative;
  overflow: hidden;
}

.right-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.right-section:active::before {
  left: 100%;
}

.right-section:active {
  background: #1b68de;
  transform: scale(0.96);
}

/* 现代化分割线样式 */
.button-divider {
  width: 1rpx;
  height: 64rpx;
  background: linear-gradient(to bottom,
    transparent 0%,
    rgba(255, 255, 255, 0.5) 20%,
    rgba(255, 255, 255, 0.9) 50%,
    rgba(255, 255, 255, 0.5) 80%,
    transparent 100%
  );
  flex-shrink: 0;
  margin: 0 1rpx;
}

/* --------- 7. 响应式适配 --------- */
@media (max-width: 375px) {
  .unified-floating-button {
    height: 88rpx;
    font-size: 28rpx;
  }
  
  .button-section {
    padding: 0 32rpx;
  }
}

@media (min-width: 768px) {
  .unified-floating-button {
    height: 108rpx;
    font-size: 36rpx;
  }
  
  .button-section {
    padding: 0 48rpx;
  }
} 