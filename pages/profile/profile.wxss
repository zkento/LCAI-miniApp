/* pages/profile/profile.wxss */

/* 页面容器 */
.profile-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  background-color: #ffffff;
  margin-bottom: 30rpx;
  position: relative;
}

.user-avatar-wrapper {
  position: relative;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

.user-info {
  flex: 1;
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.username {
  font-size: 40rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 12rpx;
}

.user-id {
  font-size: 28rpx;
  color: #888888;
}

.qrcode-icon {
  color: #888888;
}

/* 功能列表 */
.function-list {
  margin-bottom: 30rpx;
  background-color: #ffffff;
}

.function-list .van-cell {
  padding: 32rpx 48rpx;
}

.function-list .van-cell__title {
  font-size: 32rpx;
}

/* 退出登录按钮 */
.logout-button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  background-color: #ffffff;
  border-radius: 0;
  border: none;
  margin: 0;
  padding: 0;
}

/* 聊天容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #ffffff;
  width: 100%;
  overflow-x: hidden;
  position: relative;
}

/* 聊天头部 */
.chat-header {
  padding: 24rpx 32rpx;
  background-color: #1b68de;
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
}

.chat-title {
  margin: 0;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.chat-icon {
  margin-right: 12rpx;
  font-size: 36rpx;
}

.header-actions {
  display: flex;
  align-items: center;
}

.refresh-btn, .close-btn {
  color: white;
  padding: 10rpx;
  margin-left: 16rpx;
}

.btn-hover {
  opacity: 0.8;
}

/* 重置确认UI */
.reset-confirm {
  background-color: #f0f7ff;
  border-bottom: 1px solid #e0eafc;
  padding: 26rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #606266;
}

.reset-confirm-message {
  flex: 1;
  font-size: 30rpx;
}

.reset-confirm-buttons {
  display: flex;
  gap: 0rpx;
}

.reset-btn {
  background: transparent;
  border: none;
  font-size: 30rpx;
  padding: 12rpx 0rpx;
  line-height: 1.5;
  min-height: 0;
  border-radius: 4rpx;
  width: auto;
  min-width: 100rpx;
  max-width: 130rpx;
}

.reset-btn.cancel {
  color: #606266;
}

.reset-btn.confirm {
  color: #1b68de;
  font-weight: 500;
}

/* 聊天消息区域 */
.chat-messages {
  flex: 1;
  background-color: #fafafa;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.messages-wrapper {
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 80rpx; /* 添加底部内边距，确保最后的消息不被输入框遮挡 */
}

.message {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.message.user {
  flex-direction: row-reverse;
  justify-content: flex-start;
}

.message-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: #1b68de;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 28rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.message-content {
  background-color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  max-width: calc(100% - 100rpx);
  word-break: break-word;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.message.assistant .message-content {
  border-top-left-radius: 2rpx;
  margin-right: 80rpx;
}

.message.user .message-content {
  background-color: #deebff;
  color: #1b68de;
  border-bottom-right-radius: 2rpx;
  margin-left: 8rpx;
}

.message.error .message-content {
  background-color: #ffebeb;
  color: #e74c3c;
}

.message-text {
  line-height: 1.5;
  font-size: 30rpx;
}

/* 思考中动画 */
.thinking .thinking-indicator {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  justify-content: center;
  align-items: center;
  height: 40rpx;
}

.thinking .thinking-indicator .dot {
  width: 16rpx;
  height: 16rpx;
  min-width: 16rpx;
  min-height: 16rpx;
  border-radius: 50%;
  background-color: #a0a0a0;
  animation: thinking 1.4s infinite ease-in-out both;
  display: block;
  flex-shrink: 0;
}

.thinking .thinking-indicator .dot:nth-child(1) {
  animation-delay: 0s;
}

.thinking .thinking-indicator .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.thinking .thinking-indicator .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes thinking {
  0%, 80%, 100% { 
    transform: scale(0.6);
    opacity: 0.6;
  }
  40% { 
    transform: scale(1);
    opacity: 1;
  }
}

/* 输入区域 */
.chat-input-area {
  padding: 22rpx 24rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.input-container {
  display: flex;
  align-items: center;
  background-color: #f2f3f5;
  border-radius: 48rpx;
  padding: 22rpx 16rpx 22rpx 32rpx;
}

.message-input {
  flex: 1;
  background-color: transparent;
  border: none;
  padding: 0;
  box-shadow: none;
  line-height: 1.6;
  min-height: 60rpx;
  max-height: 240rpx;
  font-size: 32rpx;
  color: #303133;
  height: 60rpx;
  display: flex;
  align-items: center;
}

/* 修改placeholder样式，使其上下居中 */
.message-input::placeholder {
  color: #999;
  line-height: 60rpx;
  height: 60rpx;
}

/* 发送按钮 - 使用原生样式 */
.send-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.send-btn .van-icon {
  font-size: 36rpx;
}

.send-btn.active {
  background-color: #1b68de;
  color: white;
}

.send-btn.disabled {
  background-color: #e0e0e0;
  color: #a0a0a0;
} 